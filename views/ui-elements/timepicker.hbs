{{> widgets/breadcrumb/breadcrumb}}
<div class="card">
	<div class="card-content">
		<div class="card-header justify-content-between d-flex">
			<h3 class="card-title"> {{translation.timePicker}} </h3>
		</div>
		<div class="card-data">
			<input type="text" class="timepicker" autocomplete="off" placeholder="Lunch Time">
		</div>
	</div>
</div>
{{#extend 'scripts'}}
<script type="text/javascript">
	$(document).ready(function() {
		$('.timepicker').timepicker({
			autoClose: true
		});
	});

</script>
{{/extend}}
