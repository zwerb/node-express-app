<div class="session-wrapper">
	<div class="row h-100 mb-0">
		<div id="forgot_error" data-value="{{Data}}"></div>
		<div class="col s3 testimonial-sec">
			<div class="session-left">
				<div class="session-slider">
					{{#each data.testimonials}}
					<div class="slider-content">
						<img src="{{avatar}}" class="rounded-circle img-responsive" alt="avatar" width="170" height="170">
						<div class="slider-meta mb-3">
							<span class="d-block client-name fw-bold"><i>{{name}}</i></span>
							<span class="d-block client-digg">{{designation}}</span>
						</div>
						<p class="px-4">{{body}}</p>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
		<div class="col s9 flex-center login-sec">
			<div class="session-right text-xs-center">
				<div class="session-table-cell">
					<div class="session-content">
						<div class="session-head text-center">
							<img src="/images/session-logo.png" class="img-responsive mb-3" alt="session-logo" width="100" height="100">
							<h2 class="mb-3">Forgot Password</h2>
							<p class="fs-14">Enter your email to send you a reset link.</p>
						</div>
						<form class="form-wrp mb-4" method="post" action="/session/forgot-password">
							<div class='input-field'>
								<input class='validate' autocomplete="off" name="email" type='email' required="" />
								<label class="validate-label" for='password'>Enter E-mail</label>
							</div>
							<input class="btn btn-block  primary" type="submit" name="forgot-password" value="Send Email">
						</form>
						<div class="text-center">
							<a href="/session/login" class="">Back To Sign In</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{#extend 'scripts'}}
<script type="text/javascript">
	var error = $('#forgot_error').attr('data-value');
	if (error) {
		M.toast({
			html: error
		});
	}

</script> {{/extend}}
