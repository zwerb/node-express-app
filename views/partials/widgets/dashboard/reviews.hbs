<div class="card">
	<div class="card-content">
		<div class="card-header">
			<h3 class="card-title">{{translation.reviews}}</h3>
		</div>
		<div class="review-widget-wrapper review-slider">
			{{#each data.reviews}}
			<div class="review-item" style="width: 100%; display: inline-block;">
				<div class="d-custom-flex align-items-center">
					{{#times rating '<i class="zmdi zmdi-star"></i>'}}
					<span>{{this}}</span> {{/times}}
					<span class="text-sm">{{title}}</span>
				</div>
				<p class="text-sm fw-bold mb-3">{{subject}}</p>
				<p class="text-sm mb-3">{{description}}</p>
				<a href="javascript:void(0)" class="text-sm" tabindex="-1">Reply</a>
			</div>
			{{/each}}
		</div>
	</div>
</div>
